---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="404 — Not Found">
  <div class="error-page">
    <div class="error-window">
      <div class="error-titlebar terminal-text">
        <span class="error-dots">
          <span class="dot dot-close"></span>
          <span class="dot dot-min"></span>
          <span class="dot dot-max"></span>
        </span>
        <span class="error-titlebar-text">bash — kitty</span>
      </div>
      <div class="error-body terminal-text">
        <p class="prompt">
          <span class="user">user</span><span class="at">@</span><span
            class="host">hyprfolio</span
          >
          <span class="path">~</span><span class="symbol">$</span>
          <span class="cmd">cd {Astro.url.pathname}</span>
        </p>
        <p class="output">
          bash: cd: {Astro.url.pathname}: No such file or directory
        </p>
        <p class="prompt">
          <span class="user">user</span><span class="at">@</span><span
            class="host">hyprfolio</span
          >
          <span class="path">~</span><span class="symbol">$</span>
          <span class="cmd">cat /etc/motd</span>
        </p>
        <p class="output ascii-art">
          {
            `  _  _    ___  _  _
 | || |  / _ \\| || |
 | || |_| | | | || |_
 |__   _| | | |__   _|
    | | | |_| |  | |
    |_|  \\___/   |_|`
          }
        </p>
        <p class="output">The page you're looking for doesn't exist.</p>
        <p class="prompt">
          <span class="user">user</span><span class="at">@</span><span
            class="host">hyprfolio</span
          >
          <span class="path">~</span><span class="symbol">$</span>
          <a href="/" class="cmd-link">cd ~</a>
          <span class="cursor"></span>
        </p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .error-page {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 20px;
    background-color: var(--hp-crust);
  }

  .error-window {
    max-width: 600px;
    width: 100%;
    border: var(--hp-border-width) solid var(--hp-accent);
    border-radius: var(--hp-border-radius);
    overflow: hidden;
    background-color: var(--hp-base);
    box-shadow: 0 8px 32px var(--hp-shadow);
  }

  .error-titlebar {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 8px 12px;
    background-color: var(--hp-mantle);
    border-bottom: 1px solid var(--hp-surface-0);
    font-size: 12px;
    color: var(--hp-subtext-1);
  }

  .error-dots {
    display: flex;
    gap: 6px;
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .dot-close {
    background-color: var(--hp-red);
  }

  .dot-min {
    background-color: var(--hp-yellow);
  }

  .dot-max {
    background-color: var(--hp-green);
  }

  .error-body {
    padding: 16px;
    font-size: 13px;
    line-height: 1.6;
  }

  .error-body p {
    margin: 0 0 4px;
  }

  .prompt {
    color: var(--hp-text);
  }

  .user {
    color: var(--hp-green);
  }

  .at {
    color: var(--hp-subtext-1);
  }

  .host {
    color: var(--hp-blue);
  }

  .path {
    color: var(--hp-purple);
    margin-left: 4px;
  }

  .symbol {
    color: var(--hp-subtext-1);
    margin: 0 4px;
  }

  .cmd {
    color: var(--hp-text);
  }

  .output {
    color: var(--hp-red);
    padding-left: 0;
  }

  .ascii-art {
    white-space: pre;
    color: var(--hp-yellow);
    margin: 8px 0;
  }

  .output:not(.ascii-art):last-of-type {
    color: var(--hp-subtext-0);
    margin-bottom: 8px;
  }

  .cmd-link {
    color: var(--hp-accent);
    text-decoration: none;
  }

  .cmd-link:hover {
    text-decoration: underline;
  }

  .cursor {
    display: inline-block;
    width: 7px;
    height: 14px;
    background-color: var(--hp-text);
    vertical-align: text-bottom;
    margin-left: 2px;
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    50% {
      opacity: 0;
    }
  }
</style>
