---
import { loadConfig } from '@/lib/config';
import type { EducationItem } from '@/types/config';

interface Props {}

const config = loadConfig();
const education = config.education;
---

<div class="terminal-text p-4 overflow-y-auto">
  {
    education.length === 0 ? (
      <div class="empty">No education entries configured.</div>
    ) : (
      education.map((item: EducationItem, index: number) => (
        <div class:list={['entry', { 'mt-4': index > 0 }]}>
          <div class="entry-header">
            <span class="institution">{item.institution}</span>
            <span class="date-range">
              {item.startDate} — {item.endDate || 'present'}
            </span>
          </div>
          <div class="entry-detail">
            {item.studyType && (
              <span class="study-type">{item.studyType}</span>
            )}
            {item.studyType && item.area && (
              <span class="separator"> · </span>
            )}
            <span class="area">{item.area}</span>
            {item.gpa && (
              <span class="gpa"> · GPA: {item.gpa}</span>
            )}
          </div>
          {item.honors.length > 0 && (
            <div class="honors">
              {item.honors.map((h: string) => (
                <span class="honor-item">  * {h}</span>
              ))}
            </div>
          )}
          {item.courses.length > 0 && (
            <div class="courses">
              {item.courses.map((c: string, i: number) => (
                <span class="course-tag">{c}{i < item.courses.length - 1 ? ', ' : ''}</span>
              ))}
            </div>
          )}
          {item.url && (
            <div class="link-row">
              <a
                href={item.url}
                target="_blank"
                rel="noopener noreferrer"
                class="see-also-link"
              >
                {item.url}
              </a>
            </div>
          )}
        </div>
      ))
    )
  }
</div>

<style>
  .empty {
    color: var(--hp-subtext-0);
  }

  .entry + .entry {
    border-top: 1px solid var(--hp-surface-1);
    padding-top: 1rem;
  }

  .entry-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
  }

  .institution {
    color: var(--hp-accent);
    font-weight: 700;
  }

  .date-range {
    color: var(--hp-subtext-0);
    white-space: nowrap;
  }

  .entry-detail {
    margin-top: 0.125rem;
    color: var(--hp-text);
  }

  .study-type {
    color: var(--hp-green);
  }

  .separator {
    color: var(--hp-overlay-1);
  }

  .area {
    color: var(--hp-text);
  }

  .gpa {
    color: var(--hp-yellow);
  }

  .honors {
    margin-top: 0.375rem;
  }

  .honor-item {
    display: block;
    color: var(--hp-subtext-1);
  }

  .courses {
    margin-top: 0.375rem;
    color: var(--hp-subtext-0);
  }

  .course-tag {
    color: var(--hp-subtext-0);
  }

  .link-row {
    margin-top: 0.25rem;
  }

  .see-also-link {
    color: var(--hp-blue);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .see-also-link:hover {
    color: var(--hp-accent);
  }
</style>
